<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="app.hacela.chamatablebanking">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:replace="android:icon"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="jobgetabu.me"
                    android:path="/e-Chama-Table-banking-Web"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="chamatablebanking.page.link"
                    android:scheme="http" />
                <data
                    android:host="chamatablebanking.page.link"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".ui.CreateChamaActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".onboarding.OnBoardingActivity" />
        <activity android:name=".ui.newchama.NewChamaActivity"/>
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.SignUpActivity" />
        <activity
            android:name=".ui.GroupContributionsActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity android:name=".ui.SingleContributionsActivity" />
        <activity android:name=".ui.LoansActivity"
            android:parentActivityName=".ui.MainActivity"/>
    </application>

</manifest>